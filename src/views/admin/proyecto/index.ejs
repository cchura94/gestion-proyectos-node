<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

<h1> <%- titulo %> </h1>

<a href="/proyecto/crear" class="btn btn-success">Agregar Nuevo proyecto</a>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>NOMBRE</th>
                            <th>URL</th>
                            <th>CREADO EN</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% proyectos.forEach(function(proy){ %>                      
                        <tr>
                            <td> <%- proy.nombre %> </td>
                            <td> <%- proy.url %> </td>
                            <td> <%- proy.createdAt.toLocaleDateString(); %> </td>
                            <td>
                                <a href="/proyecto/<%- proy.id %>" class="btn btn-info">Mostrar</a>
                                <a href="/proyecto/<%- proy.id %>/editar" class="btn btn-warning">editar</a>
                                <form action="/proyecto/eliminar/<%- proy.id %>" method="post">
                                    <input type="submit" value="Eliminar" class="btn btn-danger">
                                </form>
                
                            </td>
                        </tr>
                        <% }); %>
                
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>
